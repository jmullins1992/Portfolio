@model SWCLMS.UI.Models.MultiDashboardVM

@{
    ViewBag.Title = "MultiDashboard";
}


<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h2>Hello @Model.LmsUser.FirstName!</h2>
        
        @if (Model.IsAdmin)
        {
            <a href="@Url.Action("Index", "Admin")">
                <div class="well">
                    <h3>Go to Admin Dashboard</h3>
                </div>
            </a>
        }
        @if (Model.IsTeacher)
        {
            <a href="@Url.Action("Index", "Teachers")">
                <div class="well">
                    <h3>Go to Teacher Dashboard</h3>
                </div>
            </a>

        }
        @if (Model.IsParent)
        {
            <a href="@Url.Action("Index", "Parents")">
                <div class="well">
                    <h3>Go to Parent Dashboard</h3>
                </div>
            </a>
        }
        @if (Model.IsStudent)
        {
            <a href="@Url.Action("Index", "Students")">
                <div class="well">
                    <h3>Go to Student Dashboard</h3>
                </div>
            </a>
        }
    </div>
</div>

